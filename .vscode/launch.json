    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch",
            "preLaunchTask": {
                "type": "cargo",
                "command": "build",
                "problemMatcher": [
                    "$rustc"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "label": "cargo build"
            },
            "program": "${workspaceFolder}/target/debug/day8",
            "args": ["--file", "data/day8"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo Test Debug",
            "program": "cargo",
            "args": ["test", "--bin", "day8"],
            "cwd": "${workspaceFolder}"
        }
    ]
}